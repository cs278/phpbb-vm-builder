#!/bin/bash

HOSTNAME="phpbb-vm0";
MIRROR="http://archive.ubuntu.com/ubuntu";
USER="phpbb";
PASSWORD=$USER;
NAME="phpBB";
HYPERVISOR="vbox";
SUITE="karmic";
TIMEZONE=$(cat /etc/timezone);

CONFIG=$(readlink -f "$(dirname $0)/../etc/phpbb-vm-builder");
BOOT="$CONFIG/boot";
EXEC="$CONFIG/exec";
COPY="$CONFIG/copy.conf";
LOGIN="$CONFIG/login";

HTTPD="apache";
MEMCACHE="";
APC="";
XCACHE="";
DBMS="firebird";

PACKAGES_BUILD="
bash-completion
debconf-utils
vim
nano
screen
curl
subversion
";
PACKAGES="
openssh-server
php5-dev
php5-cli
php5-gd
php5-curl
";

case "$HTTPD" in
	apache)
		PACKAGES+=" libapache2-mod-php5";
	;;

	light*)
		PACKAGES+="";
	;;

	nginx*)
		PACKAGES+="";
	;;

	*)
		echo "Unsupported HTTPD";
		exit 1;
	;;
esac

case "$DBMS" in
	mysql*)
		PACKAGES+=" php5-mysql";
		PACKAGES+=" mysql-server phpmyadmin";
	;;

	sqlite)
		PACKAGES+=" php5-sqlite sqlite";
	;;

	firebird)
		PACKAGES+=" php5-interbase";
		PACKAGES+=" firebird2.1-super";
	;;

	mssql)
		PACKAGES+="";
	;;

	oracle)
		PACKAGES+="";
	;;

	postgre)
		PACKAGES+="";
	;;

	*)
		echo "Unsupported DBMS";
		exit 1;
	;;
esac

if [ -n "$APC" ]; then
	PACKAGES+=" php-apc";
fi

if [ -n "$MEMCACHE" ]; then
	PACKAGES+=" php5-memcache memcached";
fi

function include_file()
{
	SRC=$1;
	NAME=$(basename "$SRC");

	if [ -n "$2" ]; then
		DST="/root/${2//\//_}";
	else
		if [ "${2:0:1}" != "/" ]; then
			DST="/root/$2";
		else
			DST=$2;
		fi
	fi

	echo "$SRC $DST" >> $COPY;
	echo -n $DST;
}

function debconf_set()
{
	PACKAGE=$1;
	FILE="$CONFIG/packages/$PACKAGE/selections";

	if [ -e $FILE ]; then
		echo "cat \"$FILE\" | chroot \$1 debconf-set-selections" >> $EXEC;
	fi
}

function boot_install_pre()
{
	PACKAGE=$1;
	FILE="$CONFIG/packages/$PACKAGE/install.pre";

	if [ -e $FILE ]; then
		run_in_target $FILE;
	fi;
}

function boot_install()
{
	PACKAGE=$1;

	echo "# Install '$PACKAGE'" >> $EXEC;
	echo "" >> $EXEC;

	debconf_set $PACKAGE;

	boot_install_pre $PACKAGE;

	echo "chroot \$1 apt-get install -y --force-yes $PACKAGE" >> $EXEC;
	echo "chroot \$1 dpkg-reconfigure --unseen-only --priority=critical $PACKAGE" >> $EXEC;

	boot_install_post $PACKAGE;

	echo "" >> $EXEC;
	echo "# Done installing '$PACKAGE'" >> $EXEC;
	echo "" >> $EXEC;
}

function boot_install_post()
{
	PACKAGE=$1;
	FILE="$CONFIG/packages/$PACKAGE/install.post";

	if [ -e $FILE ]; then
		run_in_target $FILE;
	fi;
}

function run_in_target()
{
	FILE=$1;

	if [ -e $FILE ]; then
		echo "TMP=\$(chroot \$1 mktemp)" >> $EXEC;
		echo "cp $FILE \$TMP" >> $EXEC;
		echo "chroot \$1 chmod o+x \$TMP" >> $EXEC;
		echo "chroot \$1 \$TMP" >> $EXEC;
		echo "chroot \$1 rm \$TMP" >> $EXEC;
	fi;
}

OPTS="";

for PACKAGE in ${PACKAGES_BUILD}; do
	OPTS+=" --addpkg=$PACKAGE";
done

EXEC_DIR="$EXEC";
EXEC=$(mktemp);
chmod o+x $EXEC;
cat "$EXEC_DIR/head" > $EXEC;

BOOT_DIR="$BOOT";
BOOT=$(mktemp);
cat "$BOOT_DIR/head" > $BOOT;

COPY_FILE="$COPY";
COPY=$(mktemp);
cat $COPY_FILE > $COPY;

for PACKAGE in $PACKAGES; do
	boot_install $PACKAGE;
done

cat "$BOOT_DIR/tail" >> $BOOT;
cat "$EXEC_DIR/tail" >> $EXEC;

#cat $COPY; echo; cat $EXEC; echo; cat $BOOT; rm $COPY $BOOT $EXEC; exit;
#--firstboot=$BOOT \
#--firstlogin=$LOGIN \
#--copy=$COPY \
sudo /home/chris/projects/ubuntu/vmbuilder/karmic-0.12/ubuntu-vm-builder $HYPERVISOR $SUITE \
--tmpfs - \
--execscript="$EXEC" \
--addpkg=acpid \
--addpkg unattended-upgrades \
--user=$USER --name="$NAME" --pass="$PASSWORD" \
--hostname=$HOSTNAME \
--verbose \
--debug \
--mac="08:00:27:61:ED:B3" \
--mirror=$MIRROR \
--security-mirror=$MIRROR \
--timezone=$TIMEZONE \
$OPTS;

rm $BOOT $COPY $EXEC;
